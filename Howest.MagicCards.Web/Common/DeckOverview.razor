<section class="col-6">
    <h3>Deck</h3>

    @if (Deck != null)
    {
        <ul>
            @foreach (DeckCardReadDetailDTO deckCard in Deck)
            {
                <li @onclick="@(() => RemoveCardFromDeck(deckCard))">@deckCard.Name: @deckCard.Amount</li>
            }
        </ul>
    }

    <input type="submit" id="button-save" class="btn btn-primary" value="Save" @onclick="@(() => PostDeckCard(8, new DeckCardWriteDTO() { CardId = 1, Amount = 1}))" />
</section>
